general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "wireless wlp7s0"
order += "ethernet enp8s0"
order += "battery all"
order += "memory"
order += "volume master"
order += "tztime local"

volume master {
    format = "VOLUME: %volume"
    format_muted = "â™ª: muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

wireless wlp7s0 {
    format_up = "WIFI: (%quality at %essid, %bitrate) %ip"
    format_down = "WIFI: down"
}

ethernet enp8s0 {
    format_up = "E: %ip (%speed)"
    format_down = ""
}

battery all {
    format = "BATTERY: %percentage %remaining %emptytime"
    format_down = "No battery"

    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

memory {
    format = "RAM: %used"
    threshold_degraded = "10%"
    format_degraded = "MEMORY: %free"
}

